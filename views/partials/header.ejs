<div class="app-header header-shadow bg-dark header-text-light">
    <div class="app-header__logo" style="background: white !important;">
        <div id="sidebarImg"><img src="https://i.pinimg.com/originals/d2/0d/f4/d20df48a23fe2218aadc28b41b5a0c22.png"
                style="color: white; height: 30px; width: 100px;"></div>
        <div class="header__pane ml-auto">
            <div class="logo-source">
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic"
                    data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>
    <div class="app-header__content">
        <div class="app-header-left">
            <!-- <div class="search-wrapper">
                <div class="input-holder">
                    <input type="text" class="search-input" placeholder="Type to search">
                    <button class="search-icon"><span></span></button>
                </div>
                <button class="close"></button>
            </div> -->
        </div>
        <div class="app-header-right">
            <div class="header-btn-lg pr-0">
                <div class="widget-content p-0">
                    <div class="widget-content-wrapper">
                        <div class="widget-content-left">
                            <div class="btn-group">
                                <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0">
                                    <img width="42" class="rounded-circle"
                                        src="/uploads/userProfile/<%=User.profileImageSource%>" alt="">
                                    <i class="fa fa-angle-down ml-2 opacity-8"></i>
                                </a>
                                <div tabindex="-1" role="menu" aria-hidden="true"
                                    class="dropdown-menu dropdown-menu-right">
                                    <button type="button" class="dropdown-item" onclick="gotoMyProfile()">My
                                        Profile</button>
                                    <button type="button" class="dropdown-item" onclick="gotoChangePassword()">Change
                                        Password</button>
                                    <form action="/user/logout?_method=DELETE" method="POST">
                                        <button type="submit" class="dropdown-item">Sign Out</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content-left  ml-3 header-user-info" style="cursor: pointer;"
                            onclick="gotoMyProfile()">
                            <div class="widget-heading">
                                <%=User.firstName + ' ' + User.lastName%>
                            </div>
                            <div class="widget-subheading">
                                <%=User.roleName%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function gotoMyProfile() {
        location = '/user/profile'
    }
    function gotoChangePassword() {
        location = '/user/changePassword'
    }
</script>